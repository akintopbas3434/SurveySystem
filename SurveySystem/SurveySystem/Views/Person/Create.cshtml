
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Kişi Ekleme Sayfası</div>
        <hr>
        <form action="/Person/Create">
            <div class="form-group">
                <label for="input-1">Ad-Soyad</label>
                <input type="text" class="form-control" name="NameSurname" id="input-1" placeholder="Ad-Soyad Giriniz." maxlength="50" required>
            </div>
            <div class="form-group">
                <label for="input-2">Kod</label>
                <input type="text" class="form-control" name="Code" id="input-2" placeholder="Kodunuzu Giriniz." maxlength="10" required>
            </div>
            <div class="form-group">
                <label for="input-3">Şifre</label>
                <input type="password" class="form-control" name="Password" id="input-3" placeholder="Şifresinizi Giriniz." maxlength="20" required>
            </div>
            <div class="form-group">
                <div class="demo-checkbox">
                    <input type="checkbox" id="user-checkbox" class="filled-in chk-col-primary" checked="">
                    <label for="user-checkbox">Beni Hatırla</label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success shadow-success px-5"><i class="icon-lock"></i> Kaydet</button>
            </div>
        </form>
    </div>
</div>